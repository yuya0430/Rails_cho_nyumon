<h1 class="display-4 text-primary">Bloggenres#add</h1>
<p>※ジャンル・データの作成</p>
<% if @bloggenre.errors.any? %>
<ul>
	<% @bloggenre.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<%= form_for(@bloggenre, url:{controller:'bloggenres', action:'add'}) do |form| %>
	<div class="form-group">
		<label for="name">Name</label>
		<%= form.text_field :name,{class:"form-control"} %>
	</div>
	<div class="form-group">
		<label for="memo">Memo</label>
		<%= form.text_field :memo,{class:"form-control"} %>
	</div>
	<td><%= form.submit "作成" %></td>
<% end %>
